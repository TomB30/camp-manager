          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('List campers successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    console.log('Total campers:', jsonData.total);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
