# Backend Environment Configuration
# DO NOT COMMIT .env files - This is a template only
# For production, use strong secrets and secure credentials

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Database Configuration
# Development values shown - CHANGE for production
DB_HOST=localhost
DB_PORT=5432
DB_USER=campmanager
DB_PASSWORD=campmanager_dev
DB_NAME=campmanager
DB_SSLMODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# JWT Configuration
# CRITICAL: Generate a secure secret for production
# Example: openssl rand -base64 32
# NEVER use the default value in production!
JWT_SECRET_KEY=development-secret-key-change-in-production

# CORS Configuration
# Comma-separated list of allowed origins
# Development: include your frontend dev server
# Production: set to your production frontend URL(s)
# Example for Render: https://camp-manager.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
